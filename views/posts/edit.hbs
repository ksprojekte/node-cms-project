<!-- User Edit Page -->

<h3>Edit Post</h3>
<div class="row" aria-label="Content Section">
    <form action="/posts/{{post._id}}" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{post.title}}" maxlength="140" required>
                <label>Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s3" id="status-div">
                <select id="status" name="status">
                    {{#fixStatus post.status}}
                    <option value="public" selected>Public</option>
                    <option value="draft">Draft</option>
                    {{/fixStatus}}
                </select>
                  <label>Status</label>       
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Content:</h5>
                <textarea id="body" name="body">{{post.body}}</textarea>
            </div>
        </div>

        <div class="row">
             <button class="btn-large waves-effect waves-light blue" type="submit" value="edit" aria-label="Edit post">Edit</button>
             <button class="btn-large waves-effect waves-light white" aria-label="Cancel edit"><a href="/posts" class="cancel">Cancel</a></button>
        </div>
    </form>
</div>